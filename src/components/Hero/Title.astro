---
import Canvas from "@components/Hero/react/Canvas"
import Name from "@components/Hero/Name.astro"
---

<section class="hero-container" id="hero-container">
	<div class="block lg:hidden">
		<Name />
	</div>
	<div class="relative h-40 w-full hidden lg:block">
		<Canvas client:only="react" />
	</div>
</section>

<style>
	.hero-container {
		display: grid;
		grid-template-rows: repeat(3, auto);
		padding: 1rem 0;
		align-self: center;
	}

	@media screen and (max-width: 320px) ) {
		.hero-container {
			justify-items: center;
		}
	}
</style>
