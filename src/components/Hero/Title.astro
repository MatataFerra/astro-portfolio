---
import Name from "@components/Hero/Name.astro"
---

<div class="div">
	<Name />
	<h2 class="h2">
		<span class="gradient-text-from-blue-to-purple size-title"> Web Developer </span>
	</h2>
	<p class="p">
		I'm a...<br /> boring way to start my profile... I save you the pain, keep enjoying
	</p>
</div>

<style>
	.div {
		display: grid;
		grid-template-rows: repeat(3, auto);
		padding: 1rem 0;
		align-self: center;
	}

	.div-talk {
		place-self: center;
		background-color: $color-red;
		border-radius: 50%;
		padding: 0.7rem;
		cursor: pointer;

		div {
			width: 100%;
			height: 100%;
			border-radius: 50%;
			background-color: lighten($color: var(--color-red), $amount: 10%);
		}

		p {
			padding: 1.8rem 0.5rem;
			margin: 0;
			font-size: 14px;
		}
	}

	.h2 {
		font-size: 24px;
		text-align: center;
	}

	.p {
		font-size: 14px;
		text-align: center;
	}

	.size-title {
		font-size: 3rem;
	}

	@media screen and (max-width: var(--breakpoint-sm)) ) {
		.div {
			justify-items: center;
		}

		.h2 {
			font-size: 20px;
		}

		.div-talk {
			padding: 0.5rem;
			p {
				padding: 1.3rem 0.3rem;
				font-size: 12px;
			}
		}

		.p {
			font-size: 12px;
			text-align: center;
		}
	}
</style>
