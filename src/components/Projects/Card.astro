---
import { Image } from "astro:assets"

interface Props {
	imgSrc: string
	href: string
}

const { imgSrc, href } = Astro.props
---

<div class="card">
	<a target="_blank" rel="noopener noreferrer" class="cardLinks" {href}>
		<div role="img" aria-labelledby="Project" style={{ backgroundImage: `url(${imgSrc})` }}></div>
	</a>
</div>

<style>
	.card {
		height: 300px;
		width: 100%;
		display: flex;
		overflow: hidden;
		position: relative;
		align-items: flex-end;
		text-align: center;
		background-color: var(--color-primary);
		color: var(--color-black);
		border-radius: 10px;
		box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
		transition: all 0.3s ease-in-out;

		&:hover {
			transform: scale(1.025);
		}
		a div {
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
			width: 100%;
			height: 100%;
			transition: all 0.5s ease-in-out;

			&:hover {
				transform: scale(1.05) scaleY(1.075);
			}
		}
	}

	.cardLinks {
		display: flex;
		background-color: var(--color-primary);
		width: 100%;
		height: 100%;
		z-index: 2;
		padding: 1rem;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		text-decoration: none;

		.image {
			display: flex;
			transform: rotate(360deg);
		}
	}

	.cardLinkContainer {
		display: flex;
		align-items: center;
	}

	.card-empty {
		height: 300px;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: var(--color-primary);
		border-radius: 10px;
		transition: all 0.3s ease-in-out;
		border: 5px dashed var(--color-light-gray);
		cursor: pointer;
	}

	.goto {
		font-size: 0;
		color: var(--color-light-gray);
	}

	.gotoSpace {
		margin-right: 0.2rem;
	}

	.gotoSpaceL {
		margin-left: 0.2rem;
	}

	@keyframes moveAndRotateIcon {
		0% {
			transform: rotate(0);
		}
		100% {
			transform: rotate(360deg);
		}
	}
</style>
