---
import Card from "@components/Projects/Card.astro"
import EmptyCard from "@components/Projects/EmptyCard.astro"
import { PROJECTS_IMAGE, PROJECTS_URL } from "@lib/constants"
---

<section class="section">
	<div class="main">
		<h2 class="h2">My Projects</h2>
		<section class="projects-container">
			<Card imgSrc={PROJECTS_IMAGE.casual} href={PROJECTS_URL.casual} />
			<Card imgSrc={PROJECTS_IMAGE.iql} href={PROJECTS_URL.iql} />
			<Card imgSrc={PROJECTS_IMAGE.w11} href={PROJECTS_URL.w11} />
			<EmptyCard />
		</section>
	</div>
</section>

<style>
	.section {
		min-height: 100vh;
		display: grid;
		place-content: center;
		grid-template-columns: 1fr;
	}

	.main {
		margin: 3rem 0;
		display: flex;
		flex-direction: column;
	}

	.projects-container {
		display: grid;
		grid-template-columns: repeat(2, minmax(500px, 1fr));
		margin-top: 1rem;
		gap: 2rem;
	}

	.h2 {
		text-align: center;
		font-size: var(--h2-size);
		margin-bottom: 4rem;
	}

	@media screen and (max-width: var(--breakpoint-md)) {
		.projects-container {
			display: flex;
			flex-direction: column;
		}
	}
</style>
