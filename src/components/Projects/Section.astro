---
import Card from "@components/Projects/Card.astro"
import EmptyCard from "@components/Projects/EmptyCard.astro"
import { PROJECTS_URL, COVER_PROJECTS_IMAGE } from "@lib/constants"
---

<section class="section-projects">
	<div class="main-projects">
		<h2 class="h2-projects">My Projects</h2>
		<section class="projects-container">
			<Card imgSrc={COVER_PROJECTS_IMAGE.casual} href={PROJECTS_URL.casual} />
			<Card imgSrc={COVER_PROJECTS_IMAGE.iql} href={PROJECTS_URL.iql} />
			<Card imgSrc={COVER_PROJECTS_IMAGE.w11} href={PROJECTS_URL.w11} />
			<EmptyCard />
		</section>
	</div>
</section>

<style>
	.section-projects {
		min-height: 100vh;
		display: grid;
		place-content: center;
		grid-template-columns: 1fr;
	}

	.main-projects {
		margin: 3rem 0;
		display: flex;
		flex-direction: column;
	}

	.projects-container {
		display: grid;
		grid-template-columns: repeat(2, minmax(150px, 1fr));
		margin-top: 1rem;
		gap: 2rem;
	}

	.h2-projects {
		text-align: center;
		font-size: var(--h2-size);
		margin-bottom: 4rem;
	}
	@media screen and (max-width: 768px) {
		.projects-container {
			display: flex;
			flex-direction: column;
		}
	}
</style>
